  "item": [
    {
      "name": "Login as a POSTCODE API USER",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              " var jsonData = JSON.parse(responseBody);",
              "",
              "pm.test(\"Login test\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "       ",
              "pm.test(\"Save access_token as an environment variable\", function() {",
              "    postman.setEnvironmentVariable(\"ACCESS_TOKEN\", jsonData.accessToken);",
              "});",
              "            ",
              "pm.test(\"Save refresh_token as an environment variable\", function() {",
              "    postman.setEnvironmentVariable(\"REFRESH_TOKEN\", jsonData.refreshToken);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json;charset=UTF-8",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"emailAddress\":\"{{AUTH_USERNAME}}\",\n    \"password\":\"{{AUTH_PASSWORD}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "https://{{AUTHENTICATION_HOST}}/{{AUTHENTICATION_ENDPOINT}}",
          "protocol": "https",
          "host": [
            "{{AUTHENTICATION_HOST}}"
          ],
          "path": [
            "{{AUTHENTICATION_ENDPOINT}}"
          ]
        }
      },
      "response": []
